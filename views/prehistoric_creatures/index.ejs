<form action="/prehistoric_creatures" method="">
  <label for="typeFilter">Filter by type</label>
  <input type="text" name="typeFilter" id="typeFilter" />
  <input type="submit" value="submit" />
</form>

<ul>
  <% creatureData.forEach((creature, index)=>{ %>
  <li>
    <%= creature.type %> is a <img src="<%= creature.img_url %> " alt="" />
    <form
      action="/prehistoric_creatures/<%= index %>/?_method=DELETE"
      method="POST"
    >
      <input type="submit" value="Delete" />
    </form>
  </li>
  <% }) %>
</ul>
